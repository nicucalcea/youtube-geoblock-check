{
    "manifest_version": 2,
    "name": "YouTube GeoRestrictions",
    "version": "1.0",
    "description": "Shows a list of countries the video is available in.",
    "icons": {
        "48": "icons/border-48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "youtube.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "https://www.googleapis.com/*"
    ]
}