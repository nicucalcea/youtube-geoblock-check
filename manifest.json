{
    "manifest_version": 2,
    "name": "YouTube Geoblock",
    "version": "1.0",
    "description": "Shows where a YouTube video is restricted so you can use a VPN to avoid the restriction.",
    "icons": {
        "48": "icon.png",
        "96": "icon@2x.png"
    },
    "permissions": [
        "activeTab",
        "<all_urls>",
        "storage"
    ],
    "content_scripts": [{
        "matches": [
            "https://www.youtube.com/watch*",
            "https://www.youtube.com/embed/*"
        ],
        "js": [
            "contentScript.js"
        ]
    }],
    "options_ui": {
        "page": "options.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "youtube-geoblock@nicu.md"
        }
    }
}